<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_space_sec"
        android:layout_marginLeft="@dimen/border_space_sec_max"
        android:layout_marginTop="@dimen/border_space_sec">

        <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.CircleImageView
            android:id="@+id/topic_discussion_head_iv"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/place_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_toRightOf="@id/topic_discussion_head_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic_discussion_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_ml"/>

            <TextView
                android:id="@+id/topic_discussion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_padding"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/com_line"/>

    <TextView
        android:id="@+id/topic_discussion_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_space_half"
        android:layout_marginLeft="@dimen/border_space_sec_max"
        android:layout_marginRight="@dimen/border_space_sec_max"
        android:layout_marginTop="@dimen/base_padding"
        android:textSize="@dimen/text_size_ml"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/border_space_sec_max">

        <TextView
            android:id="@+id/topic_discussion_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_ms"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/border_space_half"
            android:layout_marginRight="@dimen/border_space_half"
            android:text="|"
            android:textSize="@dimen/text_size_ms"/>

        <TextView
            android:id="@+id/topic_discussion_comm_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/community_write"
            android:drawablePadding="@dimen/base_padding"
            android:paddingBottom="@dimen/border_space"
            android:paddingLeft="@dimen/border_space_half"
            android:paddingTop="@dimen/border_space"
            android:text="@string/str_reply"
            android:textSize="@dimen/text_size_ms"/>
    </LinearLayout>

    <View
        android:id="@+id/topic_discussion_conn_line"
        style="@style/com_line"/>

    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.CommentListView
        android:id="@+id/topic_discussion_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/border_space"
        android:layout_marginLeft="@dimen/border_space_sec_max"
        android:layout_marginRight="@dimen/border_space_sec_max"
        android:layout_marginTop="@dimen/border_space_half"
        android:orientation="vertical"/>
    <View
        android:layout_height="@dimen/border_space_sec"
        style="@style/com_line"/>
</LinearLayout>