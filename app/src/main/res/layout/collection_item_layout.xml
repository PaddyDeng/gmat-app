<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/border_space_half"
        android:paddingLeft="@dimen/border_space_sec_max"
        android:paddingRight="@dimen/border_space"
        android:paddingTop="@dimen/border_space">

        <TextView
            android:id="@+id/collection_topic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue"/>

        <TextView
            android:id="@+id/collection_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space_half"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/card_height"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/collection_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="@dimen/border_space_sec_max_m"
            android:text="@string/str_cancel_collection"
            android:textSize="@dimen/text_size_ml"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>