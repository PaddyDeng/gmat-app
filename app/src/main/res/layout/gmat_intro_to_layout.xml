<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/border_space_sec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_half_padding"
            android:layout_weight="1"
            android:background="@drawable/icon_intro_zero_bg">

            <LinearLayout
                android:id="@+id/intro_one_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_intro_zero_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/intro_one_title_tv"
                        style="@style/free_title_style"
                        android:layout_marginRight="@dimen/base_half_padding"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/intro_one_course_time"
                        style="@style/sm_txt_style"
                        android:layout_marginBottom="@dimen/border_space"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/intro_one_label"
                style="@style/play_times_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_half_padding"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/intro_two_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_intro_sc_bg"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffa748"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/gmat_intro_two_title"
                            style="@style/free_title_style"/>

                        <TextView
                            android:id="@+id/intro_two_course_time"
                            style="@style/sm_txt_style"
                            android:layout_below="@id/gmat_intro_two_title"
                            android:layout_marginBottom="@dimen/border_space"
                            android:layout_marginTop="@dimen/border_space"/>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/intro_two_label"
                style="@style/play_times_style"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_space"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/intro_thr_new_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_half_padding"
            android:layout_weight="1"
            android:background="@drawable/icon_intro_rc_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>

                    <!--android:background="#ffb299"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/intro_thr_title_tv"
                            style="@style/free_title_style"
                            android:maxLines="1"/>
                        <!--android:text="@string/str_intro_thr_type"-->

                        <TextView
                            android:id="@+id/intro_thr_course_time"
                            style="@style/sm_txt_style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/border_space_half"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/intro_thr_container"
                    style="@style/play_times_style"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/intro_four_new_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_half_padding"
            android:layout_weight="1"
            android:background="@drawable/icon_intro_math_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/intro_four_title_tv"
                            style="@style/free_title_style"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/intro_four_course_time"
                            style="@style/sm_txt_style"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/border_space_half"/>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/intro_four_container"
                    style="@style/play_times_style"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>