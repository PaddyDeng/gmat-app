<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wechar_friends_container"
        style="@style/share_container">

        <ImageView
            style="@style/share_img"
            android:src="@drawable/ssdk_oks_classic_wechat" />

        <TextView
            style="@style/share_plat"
            android:text="@string/ssdk_wechat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechart_circle_container"
        style="@style/share_container">

        <ImageView
            style="@style/share_img"
            android:src="@drawable/ssdk_oks_classic_wechatmoments" />

        <TextView
            style="@style/share_plat"
            android:text="@string/ssdk_wechatmoments" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qq_container"
        android:visibility="gone"
        style="@style/share_container">

        <ImageView
            style="@style/share_img"
            android:src="@drawable/ssdk_oks_classic_qq" />

        <TextView
            style="@style/share_plat"
            android:text="@string/ssdk_qq" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qzone_container"
        style="@style/share_container">

        <ImageView
            style="@style/share_img"
            android:src="@drawable/ssdk_oks_classic_qzone" />

        <TextView
            style="@style/share_plat"
            android:text="@string/ssdk_qzone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sina_weibo_container"
        style="@style/share_container">

        <ImageView
            style="@style/share_img"
            android:src="@drawable/ssdk_oks_classic_sinaweibo" />

        <TextView
            style="@style/share_plat"
            android:text="@string/ssdk_sinaweibo" />
    </LinearLayout>


</LinearLayout>