<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/action_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/border_space_sec_m"
            android:paddingRight="@dimen/border_space_sec_m"
            android:paddingTop="@dimen/border_space_sec_m"
            android:src="@drawable/icon_dialog_close"/>

        <ImageView
            android:id="@+id/action_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_close"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>