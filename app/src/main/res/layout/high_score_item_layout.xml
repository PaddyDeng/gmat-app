<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/border_space_sec_max">

    <ImageView
        android:id="@+id/high_score_item_iv"
        android:layout_width="129dp"
        android:layout_height="87dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/border_space_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/high_score_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_ml"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space_half">

            <TextView
                android:id="@+id/high_score_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textSize="@dimen/text_size_micro_plus"/>

            <TextView
                android:id="@+id/high_score_item_out_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_micro_plus"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>