<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_space_thr_max"
        android:background="@drawable/base_dialog_bg_shape">

        <ImageView
            android:id="@+id/tip_place_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_go_login"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/place_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space_sec"
            android:padding="@dimen/border_space_half"
            android:src="@drawable/icon_close"/>

        <TextView
            android:id="@+id/login_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip_place_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:text="@string/str_login_tip_info"
            android:textColor="@color/color_red"/>

        <TextView
            android:id="@+id/login_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/border_space"
            android:text="@string/str_login_tip_des"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/user_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_des"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space_sec_max"
            android:background="@drawable/login_tip_dialog_btn"
            android:paddingBottom="@dimen/border_space_half"
            android:paddingLeft="@dimen/border_space_sec_max"
            android:paddingRight="@dimen/border_space_sec_max"
            android:paddingTop="@dimen/border_space_half"
            android:text="@string/str_login_tip_go"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_medium"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_go_login"/>

</FrameLayout>