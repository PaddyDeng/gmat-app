<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rest_container"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/simulation_jump_rest_btn"
        style="@style/com_blue_btn"
        android:text="@string/str_simulation_jump_rest_start"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/simulation_jump_rest_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/border_space_thr"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rest_time_min_shi"
                    style="@style/rest_time_style"
                    android:text="0"/>

                <TextView
                    android:id="@+id/rest_time_min_ge"
                    style="@style/rest_time_style"
                    android:text="8"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/border_space_normal"
                        android:layout_height="@dimen/border_space_normal"
                        android:layout_margin="@dimen/base_half_padding"
                        android:background="@color/color_black"/>

                    <View
                        android:layout_width="@dimen/border_space_normal"
                        android:layout_height="@dimen/border_space_normal"
                        android:layout_margin="@dimen/base_half_padding"
                        android:background="@color/color_black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/rest_time_sec_shi"
                    style="@style/rest_time_style"
                    android:text="0"/>

                <TextView
                    android:id="@+id/rest_time_sec_ge"
                    style="@style/rest_time_style"
                    android:text="0"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_rest"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>