<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/custome_title_bar_style">

        <ImageView style="@style/black_bg_title_back"/>

        <TextView
            style="@style/title_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/str_order_practice"/>
    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_darkness"
        app:tabIndicatorColor="@color/transparent"
        app:tabSelectedTextColor="@color/color_blue"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="@color/color_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_darkness"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intelligent_contact_sc"
            style="@style/single_contact_tab_txt_style"
            android:text="SC"/>

        <TextView
            android:id="@+id/intelligent_contact_cr"
            style="@style/single_contact_tab_txt_style"
            android:text="CR"/>

        <TextView
            android:id="@+id/intelligent_contact_rc"
            style="@style/single_contact_tab_txt_style"
            android:text="RC"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
