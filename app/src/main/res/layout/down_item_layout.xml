<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/border_space"
    android:paddingTop="@dimen/border_space">

    <ImageView
        android:id="@+id/community_item_head"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="@dimen/border_space"
        android:layout_marginRight="@dimen/border_space"
        android:src="@drawable/icon_download_header"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/border_space_sec_max"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/download_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_ms"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_up_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border_space_normal"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_micro_plus"/>

            <TextView
                android:id="@+id/see_person_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border_space_normal"
                android:drawableLeft="@drawable/icon_community_eye"
                android:drawablePadding="@dimen/base_half_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_micro_plus"/>

            <TextView
                android:id="@+id/up_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/see_person_num_tv"
                android:drawableLeft="@drawable/icon_up_time"
                android:drawablePadding="@dimen/base_half_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_micro_plus"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/down_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/border_space"
        android:background="@drawable/login_tip_dialog_btn"
        android:gravity="center"
        android:paddingBottom="@dimen/border_space_normal"
        android:paddingLeft="@dimen/border_space"
        android:paddingRight="@dimen/border_space"
        android:paddingTop="@dimen/border_space_normal"
        android:textColor="@color/color_white"/>

</LinearLayout>