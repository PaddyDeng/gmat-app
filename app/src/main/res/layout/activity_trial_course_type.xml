<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/custome_title_bar_style">

        <ImageView style="@style/black_bg_title_back"/>

        <TextView
            android:id="@+id/teacher_detail_title"
            style="@style/title_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/str_trial_course_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/border_space_sec_max"
            android:layout_marginBottom="@dimen/border_space"
            android:layout_marginLeft="@dimen/border_space_sec_max"
            android:layout_marginTop="@dimen/border_space"
            android:background="@color/color_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/border_space"
            android:text="@string/str_gmat_trial_course_title"
            android:textColor="@color/color_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/border_space_sec_max"
        android:paddingRight="@dimen/border_space_sec_max">

        <RelativeLayout
            android:id="@+id/trial_sc_container"
            style="@style/trial_rl_style"
            android:background="@drawable/icon_course_one">

            <TextView
                style="@style/trial_txt_style"
                android:text="@string/str_free_one_type"/>

            <TextView
                android:id="@+id/trial_teach_sc"
                style="@style/trial_txt_teacher_style"/>

            <TextView
                android:id="@+id/trial_time_one"
                style="@style/trial_txt_teacher_use_time_style"
                android:layout_above="@id/trial_teach_sc"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trial_rc_container"
            style="@style/trial_rl_style"
            android:background="@drawable/icon_course_two">

            <TextView
                style="@style/trial_txt_style"
                android:text="@string/str_free_two_type"/>

            <TextView
                android:id="@+id/trial_teach_rc"
                style="@style/trial_txt_teacher_style"/>

            <TextView
                android:id="@+id/trial_time_rc"
                style="@style/trial_txt_teacher_use_time_style"
                android:layout_above="@id/trial_teach_rc"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trial_cr_container"
            style="@style/trial_rl_style"
            android:background="@drawable/icon_course_thr">

            <TextView
                style="@style/trial_txt_style"
                android:text="@string/str_free_thr_type"/>

            <TextView
                android:id="@+id/trial_teach_cr"
                style="@style/trial_txt_teacher_style"/>

            <TextView
                android:id="@+id/trial_time_cr"
                style="@style/trial_txt_teacher_use_time_style"
                android:layout_above="@id/trial_teach_cr"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trial_math_container"
            style="@style/trial_rl_style"
            android:layout_marginBottom="@dimen/border_space"
            android:background="@drawable/icon_course_four">

            <TextView
                style="@style/trial_txt_style"
                android:text="@string/str_free_four_type"/>

            <TextView
                android:id="@+id/trial_teach_math"
                style="@style/trial_txt_teacher_style"/>

            <TextView
                android:id="@+id/trial_time_math"
                style="@style/trial_txt_teacher_use_time_style"
                android:layout_above="@id/trial_teach_math"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
