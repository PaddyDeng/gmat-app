<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/single_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/border_space_sec_max">


        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/single_contact_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_ml"/>

            <TextView
                android:id="@+id/single_contact_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_contact_title_tv"
                android:layout_marginBottom="@dimen/border_space"
                android:layout_marginTop="@dimen/border_space"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/single_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:background="@drawable/single_contact_btn_selector"
            android:paddingBottom="@dimen/border_space_half"
            android:paddingLeft="@dimen/border_space_sec_m"
            android:paddingRight="@dimen/border_space_sec_m"
            android:paddingTop="@dimen/border_space_half"
            android:text="@string/str_single_item_btn"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/single_result_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/border_space"
            android:layout_marginRight="13dp"
            android:background="@drawable/search_result_bg"
            android:paddingBottom="@dimen/border_space_half"
            android:paddingLeft="@dimen/border_space_sec_m"
            android:paddingRight="@dimen/border_space_sec_m"
            android:paddingTop="@dimen/border_space_half"
            android:text="@string/str_simulation_item_see_result_btn"
            android:textColor="@color/color_white"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        style="@style/com_line"
        android:layout_below="@id/single_content_ll"/>

</RelativeLayout>