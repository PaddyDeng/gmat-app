<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/base_refresh_title_container"
        style="@style/custome_title_bar_style">

        <ImageView
            style="@style/black_bg_title_back"/>

        <TextView
            style="@style/title_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/str_topic_ask_question"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/community_one_item_pic_height"
        android:background="@color/color_white"
        android:id="@+id/ask_question_et"
        android:gravity="left|top"
        android:textSize="@dimen/text_size_ml"
        android:hint="@string/str_post_remark_enter_content"
        android:padding="@dimen/border_space"/>

    <TextView
        android:id="@+id/ask_question_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_space_sec_max_m"
        android:layout_marginRight="@dimen/border_space_sec_max_m"
        android:layout_marginTop="@dimen/border_space_sec_max_m"
        android:background="@drawable/blue_bg_shape"
        android:gravity="center"
        android:paddingBottom="@dimen/border_space"
        android:paddingTop="@dimen/border_space"
        android:text="@string/str_feed_commit"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_ml_plus"/>
</LinearLayout>
