<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/border_space"
              android:layout_marginTop="@dimen/border_space"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/know_point_detail_title_des"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/border_space_half"/>

    <ProgressBar
        android:id="@+id/know_point_detail_progress"
        style="@style/progress_bar_style"
        android:layout_width="0dip"
        android:layout_height="@dimen/border_space_sec_m"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/border_space_normal"
        android:layout_weight="1"
        android:max="100"
        android:progress="30"/>

    <TextView
        android:id="@+id/know_point_detail_value_des"
        android:layout_width="95dp"
        android:padding="@dimen/border_space_half"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="正确率：30%"/>

</LinearLayout>
