<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/border_space_sec"
    android:layout_marginLeft="@dimen/border_space_sec_max"
    android:layout_marginRight="@dimen/border_space_sec_max"
    android:layout_marginTop="@dimen/border_space_sec_max"
    app:cardCornerRadius="@dimen/radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point_list_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/border_space"
                android:paddingLeft="@dimen/border_space_sec_max"
                android:paddingTop="@dimen/border_space"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_ml"/>

            <TextView
                android:id="@+id/point_list_item_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/border_space"
                android:paddingLeft="@dimen/border_space_sec_max"
                android:paddingTop="@dimen/border_space"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <View style="@style/com_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/point_list_item_horlincont_style">

                <TextView
                    android:id="@+id/point_list_item_number"
                    style="@style/point_list_item_top_tv_style"/>

                <TextView
                    style="@style/point_list_item_bottom_tv_style"
                    android:text="@string/str_end_peo_num"/>
            </LinearLayout>

            <LinearLayout style="@style/point_list_item_horlincont_style">

                <TextView
                    android:id="@+id/know_point_avg_tv"
                    style="@style/point_list_item_top_tv_style"/>

                <TextView
                    style="@style/point_list_item_bottom_tv_style"
                    android:text="@string/str_avg_correct"/>
            </LinearLayout>

            <LinearLayout style="@style/point_list_item_horlincont_style">

                <TextView
                    android:id="@+id/know_point_avg_use_time"
                    style="@style/point_list_item_top_tv_style"
                    android:text="39m"/>

                <TextView
                    style="@style/point_list_item_bottom_tv_style"
                    android:text="@string/str_avg_use_time"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/point_item_start_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/base_half_padding"
                    android:layout_marginTop="@dimen/border_space_half"
                    android:paddingBottom="@dimen/border_space_half"
                    android:paddingLeft="@dimen/border_space"
                    android:paddingRight="@dimen/border_space"
                    android:paddingTop="@dimen/border_space_half"
                    android:text="@string/str_single_item_btn"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_size_micro_plus"/>

                <TextView
                    android:id="@+id/know_point_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/border_space_half"
                    android:background="@drawable/orange_bg_shape"
                    android:paddingBottom="@dimen/base_padding"
                    android:paddingLeft="@dimen/border_space"
                    android:paddingRight="@dimen/border_space"
                    android:paddingTop="@dimen/base_padding"
                    android:text="@string/str_go_on_make"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_micro_plus"/>

                <TextView
                    android:id="@+id/know_point_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/border_space"
                    android:background="@drawable/know_point_sele_point"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
