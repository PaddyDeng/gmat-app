<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_know_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.overscroll.FastAndOverScrollScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/know_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/know_login_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/logic_cr">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.font.ControlTextView
                        android:id="@+id/logic_cr_control_tv"
                        style="@style/know_txt_style"
                        android:text="@string/str_know_logic"/>

                    <TextView
                        android:id="@+id/logic_des"
                        style="@style/know_des_style"
                        android:layout_below="@+id/logic_cr_control_tv"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/know_grammer_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/grammar_sc">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.font.ControlTextView
                        android:id="@+id/grammar_sc_control_tv"
                        style="@style/know_txt_style"
                        android:text="@string/str_know_grammer"/>

                    <TextView
                        android:id="@+id/grammar_des"
                        style="@style/know_des_style"
                        android:layout_below="@+id/grammar_sc_control_tv"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/know_read_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/read_rc">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.font.ControlTextView
                        android:id="@+id/read_rc_control_tv"
                        style="@style/know_txt_style"
                        android:text="@string/str_know_read"/>

                    <TextView
                        android:id="@+id/read_des"
                        style="@style/know_des_style"
                        android:layout_below="@+id/read_rc_control_tv"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/know_math_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/math_q">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <org.zywx.wbpalmstar.widgetone.uex11597450.weiget.font.ControlTextView
                        android:id="@+id/math_q_control_tv"
                        style="@style/know_txt_style"
                        android:text="@string/str_know_math"/>

                    <TextView
                        android:id="@+id/math_des"
                        style="@style/know_des_style"
                        android:layout_below="@+id/math_q_control_tv"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </org.zywx.wbpalmstar.widgetone.uex11597450.weiget.overscroll.FastAndOverScrollScrollView>

</RelativeLayout>